@model IEnumerable<mongoDBproject.Models.Genre>

@{
    ViewData["Title"] = "GetListGenre";
}

<h1>GetListGenre</h1>
<form asp-action="GetListGenre" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            Find by type: <input type="text" name="SearchType" value="@ViewData["CurrentType"]" />
            <input type="submit" value="Search" class="btn btn-default" />
        </p>
    </div>
</form>
@Html.ActionLink("Create New", "CreateGenre")
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="GetListGenre" asp-route-sortGenre="@ViewData["IdSortParmGenre"]">@Html.DisplayNameFor(model => model.Id)</a>
            </th>
            <th>
                <a asp-action="GetListGenre" asp-route-sortGenre="@ViewData["IdBookSortParmGenre"]">@Html.DisplayNameFor(model => model.IdBook)</a>
            </th>
            <th>
                <a asp-action="GetListGenre" asp-route-sortGenre="@ViewData["GenreNameSortParmGenre"]">@Html.DisplayNameFor(model => model.GenreName)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdBook)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GenreName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "UpdateGenre", new { id = item.Id/* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("View", "GetGenre", new { id = item.Id/* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "DeleteGenre", new { id = item.Id/* id=item.PrimaryKey */ })
                </td>
            </tr>
        }
    </tbody>
</table>
