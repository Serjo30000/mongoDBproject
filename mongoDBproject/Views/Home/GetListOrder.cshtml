                <a asp-action="GetListOrder" asp-route-sortOrder="@ViewData["IdUserSortParmOrder"]">@Html.DisplayNameFor(model => model.IdUser)</a>
            </th>
            <th>
                <a asp-action="GetListOrder" asp-route-sortOrder="@ViewData["DateOrderSortParmOrder"]">@Html.DisplayNameFor(model => model.DateOrder)</a>
