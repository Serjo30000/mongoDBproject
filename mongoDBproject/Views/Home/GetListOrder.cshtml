@model IEnumerable<mongoDBproject.Models.Order>

@{
    ViewData["Title"] = "GetListOrder";
}

<h1>GetListOrder</h1>
<form asp-action="GetListOrder" method="get">
    <div class="form-actions no-color">
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
            Find by type: <input type="text" name="SearchType" value="@ViewData["CurrentType"]" />
            <input type="submit" value="Search" class="btn btn-default" />
        </p>
    </div>
</form>
@Html.ActionLink("Create New", "CreateOrder")
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="GetListOrder" asp-route-sortOrder="@ViewData["IdSortParmOrder"]">@Html.DisplayNameFor(model => model.Id)</a>
            </th>
