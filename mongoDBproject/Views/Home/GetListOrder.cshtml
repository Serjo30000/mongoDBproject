                <a asp-action="GetListOrder" asp-route-sortOrder="@ViewData["CountOrderSortParmOrder"]">@Html.DisplayNameFor(model => model.CountOrder)</a>
            </th>
            <th>
                <a asp-action="GetListOrder" asp-route-sortOrder="@ViewData["IdOrderBookSortParmOrder"]">@Html.DisplayNameFor(model => model.IdOrderBook)</a>
            </th>
            <th>
                <a asp-action="GetListOrder" asp-route-sortOrder="@ViewData["IdBookSortParmOrder"]">@Html.DisplayNameFor(model => model.IdBook)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountOrder)
